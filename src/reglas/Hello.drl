package reglas
import model.Message

rule "GOOD MORNING"
    when
        m : Message( message == "GOOD MORNING", myMessage : message )
    then
        m.setTagMessage( "Saludo" );
        //update( m );
end


rule "HELLO"
    when
        m : Message( message == "HELLO", myMessage : message )
    then
        m.setTagMessage( "Saludo" );
        //update( m );
end


rule "HI"
    when
        m : Message( message == "HI", myMessage : message )
    then
        System.out.println( myMessage );
        m.setTagMessage("Saludo");
end
